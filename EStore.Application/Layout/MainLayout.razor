@using EStore.Application.ApplicationModels
@using EStore.Contracts.Requests
@using EStore.Contracts.Responses
@inherits LayoutComponentBase
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage;


<MudThemeProvider />
<MudPopoverProvider />

<MudDialogProvider />

<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" Edge="Edge.Start" Href="/" />
        <MudIconButton Icon="@Icons.Material.Filled.ShoppingBasket" Color="Color.Inherit" Edge="Edge.Start" Href="/store" />
        <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" Edge="Edge.Start" Href="/account" />
        <AuthorizeVisible AllowedRole="ADMIN">
            <MudMenu Dense
                AnchorOrigin="Origin.CenterCenter"
                 Variant="Variant.Text"
                 Size="Size.Medium"
                 Color="Color.Inherit"
                 Icon="@Icons.Material.Filled.AdminPanelSettings">
                    <MudMenuItem Href="/admin/customers"
                                 Icon="@Icons.Material.Filled.ManageAccounts" 
                                 Label="Manage customers" />
                    <MudMenuItem Href="/admin/products"
                                 Icon="@Icons.Material.Filled.AddChart"
                                 Label="Manage products" />
            </MudMenu>
        </AuthorizeVisible>
        <MudIconButton Icon="@Icons.Material.Filled.ShoppingCart" Color="Color.Inherit" Edge="Edge.End" OnClick="@((e) => DrawerToggle())" />

    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Anchor="Anchor.End">
        <ShoppingCart/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

}